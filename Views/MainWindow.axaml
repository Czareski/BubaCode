<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BubaCode.ViewModels"
        xmlns:views="using:BubaCode.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="BubaCode.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel" 
        Icon="/Assets/avalonia-logo.ico"
        Title="BubaCode"
        d:DesignWidth="1280"
        d:DesignHeight="720"
        Width="1280"
        Height="720"
        CanResize="False">
    
    <Window.Styles>
        <Style Selector="TextBlock">
		    <Setter Property="FontFamily" Value="NonMono"></Setter>
        </Style>
    </Window.Styles>
    
    <Grid RowDefinitions="50, *">
        <views:FileBar Grid.Row="0" DataContext="{Binding FileBarViewModel}"></views:FileBar>
        <Separator Margin="0 0 0 0"
                   Grid.Row="0"
                   Grid.Column="1"
                   Background="#3F3F3F"
                   VerticalAlignment="Bottom"></Separator>
        <Grid Grid.Row="1" ColumnDefinitions="300,*">
            <ScrollViewer x:Name="Explorer"
                          Grid.Column="0"
                          Background="#161618"
                          Padding="10"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <views:FileExplorer DataContext="{Binding FileExplorerViewModel}"></views:FileExplorer>
            </ScrollViewer>

            <Grid Grid.Column="1" ColumnDefinitions="Auto,*" Background="#1A1A1D">
                <views:LineNumberBox Grid.Column="0"
                                     VerticalAlignment="Stretch"
                                     Margin="0 0 5 0"
                                     DataContext="{Binding CodeBoxViewModel}"/>

                <ScrollViewer Grid.Column="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <views:CodeBox MinWidth="{Binding Viewport.Width, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                   MinHeight="{Binding Viewport.Height, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                   DataContext="{Binding CodeBoxViewModel}"
                                   CaretLine="{Binding Caret.Line}"
                                   CaretColumn="{Binding Caret.Column}"
                                   Background="Transparent"/>
                </ScrollViewer>
            </Grid>
        </Grid>
        <views:ErrorView DataContext="{Binding ErrorViewModel}"/>
    </Grid>
</Window>
