<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BubaCode.ViewModels.FileExplorer"
             xmlns:views="using:BubaCode.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BubaCode.Views.FileExplorer"
             x:DataType="vm:FileExplorerViewModel">
    <TreeView ItemsSource="{Binding RootAsList}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
        <TreeView.DataTemplates>
            <TreeDataTemplate DataType="{x:Type vm:FolderViewModel}" 
                              ItemsSource="{Binding Children}">
                <views:FolderView />
            </TreeDataTemplate>
            <TreeDataTemplate DataType="{x:Type vm:FileViewModel}">
                <views:FileView />
            </TreeDataTemplate>
        </TreeView.DataTemplates>
    </TreeView>
</UserControl>
