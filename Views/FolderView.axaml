<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:BubaCode.Views"
             xmlns:vm="using:BubaCode.ViewModels.FileExplorer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BubaCode.Views.FolderView"
             x:DataType="vm:FolderViewModel"
             >
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
        <Path Data="{StaticResource folder_regular}" 
              Stretch="Uniform" 
              Fill="White" 
              Width="15" Height="15"/>
        
        <TextBlock Text="{Binding DirectoryInfo.Name}" 
                   Foreground="White" 
                   VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
